  <modelVersion>4.0.0</modelVersion>
  <groupId>com.jsala</groupId>
  <artifactId>distributed-systems-rpc-db-customer</artifactId>
  <version>1.0-SNAPSHOT</version>

  <!-- Runnable jar files https://kuniganotas.wordpress.com/2011/10/09/maven-specify-entry-point-main-class-in-a-jar-package/ -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>com.jsala.db.customer.DBCustomerRunner</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
